{
  "$schema": "http://json-schema.org/schema",
  "$id": "EntitySchematic",
  "title": "The entity schema",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the component.",
      "type": "string"
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path to create the component.",
      "default": "src/app"
    },
    "file": {
      "type": "string",
      "description": "The file name to create the component."
    },
    "entity": {
      "type": "string",
      "description": "The entity object to create the component."
    }
   },
  "required": []
}
